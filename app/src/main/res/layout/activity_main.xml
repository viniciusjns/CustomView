<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/bt_zup_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zup_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/bt_credit_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/bt_credit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credit_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_zup_edit_text"/>

    <Button
        android:id="@+id/bt_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/include"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_credit_card"/>


</LinearLayout>